---
import HeadSEO from './HeadSEO.astro';
export interface Props {
	title?: string;
	image?: null | {
		src: string,
		alt: string,
	};
}
const { title= 'amir4rab', image= null } = Astro.props;
---
<!-- SEO -->
<HeadSEO title={ title } image={ image }  />

<!-- Global Metadata -->
<meta charset='utf-8' />
<meta name='viewport' content='width=device-width' />

<link rel='icon' type='image/svg+xml' href='/favicon.svg' />

<link rel='sitemap' href='/sitemap.xml' />
<title>{ title }</title>
<meta name='description' content='I am amir arab, a front-end developer.'>

<!-- Fonts -->
<link rel='stylesheet' href='/fonts/index.css'> 

<!-- Global CSS -->
<style global lang='scss'>
	@import '../../styles/global.scss';
</style>

<!-- Analytics -->
<script async defer data-website-id="0fa58286-28db-4d8f-8828-e4417a32aaf4" src="https://umami.amir4rab.site/umami.js"></script>